	AnimateSpriteSize(wat_sm1, wat_Start, wat_End, 1.5);
	AnimateSpriteSize(wat_sm2, wat_Start, wat_End, 1.5);

	#WaitForStop(mouth2);
	#Sleep(0.5);
    
