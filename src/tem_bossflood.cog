activated:

# ******************    
# ** pick up IMP2 **
# ******************

	sender = GetSenderRef();

	# activate imp part
    if((sender == imp_Stand) || (sender == imp_Part))
	{
		if (visit < 1)
		{
            visit = 1;
            Call getImp2;
        }

		else if ((visit > 0) && (playing == 0))
		{
			playing = 1;
            Call readAgain;
        }
	}

# ****************
# ** boss flood **
# ****************

	# activate flood button
    else if((sender == button) && (done == 0))
	{
        done = 1;
        curCam = GetCurrentCamera();

        Call killBoss;
    }

return;

