	sound		slidsnd=olv_head2_slide_c.wav				local
	sound		hitsnd=olv_rockhead_hitearth_c.wav			local
	sound		hitstone=pru_boulder_crash_c.wav			local

	thing		player									local 

	thing		head2
	thing		push1
