	cog			hints						# send message when complete 
	
	vector		v_campos						local
	
	float		slidespeed1=12.0
	float		slidespeed2=20.0

	int		curcam							local
	int		dropredy=0							local
	int		rel								local
	int		moven								local
	int		slid=1							local
	int		talking=0							local
	int		vibe=0							local
	int		shake=0							local
	int		inway=0							local
	int		safe=0							local

	flex		victim			local
	vector	posoffset			local
	vector	angoffset			local

