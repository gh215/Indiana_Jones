	AIWaitForStop(nukid);
	PlayKey(nukid, nu_factory, 4, 0x12, 0);

	# Nukid: "Today at 11...I leave for Kenya...soon...factory."
	curSound = 	PlayVoice(nukid, nu_kenya, 1, 0);
	
