	AISetLookThing(indy, nu_mk_1);
	Sleep(3.3);

	# Cut to kid at top of slope...
	SetThingFlags(nukid, 0x10);
	SetThingFlags(badpost, 0x10);   #10/16/99  RKD: Hide the post hogging the scene
	StopKey(nukid, nu_keyTrack1, 0.0);
