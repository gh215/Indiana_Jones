	ChangeInv(player, hornerwatch, -1.0);
	swapevent = 4; # watch swap
	PlayKey(nukid, nu_getwatch, 4, 0x12, 0); # animation triggers callback
	PlayKey(indy, in_givewatch, 4, 0x12, 0);
