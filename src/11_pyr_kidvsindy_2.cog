randcluelines:

	while (newline == oldline)
	{
		newline = RandBetween(0, 9); # 1/10 chance for line 0
		if (newline != 0)
		{		
			newline = RandBetween(1, 3); # ~1/3 chance for lines 1 thru 3
		}
	}
	oldline = newline;

	PlayVoice(indy, in_sayline[newline], 1, 1);
		
	return;

