	ResetThing(player);
	PlayMode(player, 1, 0);
	DeselectWeaponWait(player);
	CopyPlayerHolsters(player, indy);
	SetThingflags(player, 0x80000);
	CopyOrientAndPos(player, indy);
	ClearThingFlags(indy, 0x80000);

	return;

