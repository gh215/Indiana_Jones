	surface	    crossurf0       
    surface	    crossurf1    	
    
    thing       player          local
    thing       actorindy
    thing       spiderCamPos
    thing       doorCamPos    
    thing       unlokblok        
    thing		spiderblock	     
    thing       door0            
    thing       door1
    thing       spycam_tgt           

	flex		moveSpeed=10.0
    flex        camSpeed=1.0
    flex        camTimer=0.5
    
    sound       indylineb0=inxj058.wav      local
    sound       indylineb1=inxj059.wav      local
    sound       indylineb2=inxj060.wav      local
    sound       indylineb3=inxj061.wav      local
    sound       indylineb4=inxj090.wav      local
    sound       indylineb5=inxj095.wav      local
    
