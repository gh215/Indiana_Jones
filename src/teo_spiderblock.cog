    int         lastrand=-1                 local
    int         currand=0                   local
    int         door0chan       local
    int         door1chan       local
    int         spiderchan      local        
    int         surfflag0=0     local                                       
    int         surfflag1=0     local
    int         check0=0        local
    int         check1=0        local
    int         check2=0        local
        
        
